<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer when pressed -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#100202"
                android:startColor="#01090D" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Main button layer when pressed -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#100202"
                android:startColor="#01090D" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>