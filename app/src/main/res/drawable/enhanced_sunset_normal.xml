<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/key_sunset_glow" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Shadow layer -->
    <item
        android:bottom="2dp"
        android:left="3dp"
        android:right="2dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#CECECE" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Main button layer -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#976530"
                android:startColor="#642613" />
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="#a9442a" />
        </shape>
    </item>
</layer-list>