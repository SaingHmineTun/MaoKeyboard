<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/key_primary_pressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Main button layer -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/key_primary_pressed" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>