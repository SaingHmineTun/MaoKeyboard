<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#3333cc" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Shadow layer -->
    <item android:left="3dp" android:right="2dp" android:top="3dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Main button layer -->
    <item android:left="2dp" android:right="3dp" android:top="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#222299"
                android:startColor="#3333bb" />
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="#000066" />
        </shape>
    </item>
</layer-list>