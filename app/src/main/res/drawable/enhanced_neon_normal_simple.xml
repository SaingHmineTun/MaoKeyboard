<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neon_glow" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Main key background with gradient for enhanced effect -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/neon_key_normal"
                android:endColor="#111111" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>