<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <stroke
                android:width="4dp"
                android:color="#8000FFFF" />
        </shape>
    </item>
    
    <!-- Middle glow effect -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#4000FFFF" />
        </shape>
    </item>
    
    <!-- Inner glow effect -->
    <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#2000FFFF" />
        </shape>
    </item>
    
    <!-- Main key background with gradient -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/neon_key_normal"
                android:endColor="#111111"
                android:angle="90" />
            <corners android:radius="6dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/neon_key_border" />
        </shape>
    </item>
</layer-list>