<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <stroke
                android:width="6dp"
                android:color="#00FFFF" />
        </shape>
    </item>
    
    <!-- Middle glow effect -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="#8000FFFF" />
        </shape>
    </item>
    
    <!-- Inner glow effect -->
    <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#4000FFFF" />
        </shape>
    </item>
    
    <!-- Main key background with gradient -->
    <item android:left="11dp" android:right="11dp" android:top="11dp" android:bottom="11dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/neon_key_pressed"
                android:endColor="#222222"
                android:angle="90" />
            <corners android:radius="6dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/neon_key_border" />
        </shape>
    </item>
</layer-list>