<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#c3324b"
                android:startColor="#d3425b" />
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="#b3223b" />
        </shape>
    </item>
</layer-list>