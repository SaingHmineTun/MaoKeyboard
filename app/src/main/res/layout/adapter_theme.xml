<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="12dp"
        app:strokeWidth="2dp"
        android:foreground="@drawable/theme_item_ripple"
        android:background="@drawable/theme_card_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp">

            <FrameLayout
                android:id="@+id/fl_theme_item"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/modern_theme_background"
                android:foreground="@drawable/theme_image_border">

                <ImageView
                    android:id="@+id/iv_theme_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Theme Background"
                    android:visibility="gone" />

                <it.saimao.tmktaikeyboard.utils.KeyboardPreviewView
                    android:id="@+id/kpv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp" />

                <ImageView
                    android:id="@+id/iv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Theme Image"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_theme"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dracula Theme"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>