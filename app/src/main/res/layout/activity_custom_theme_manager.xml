<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CustomThemeManagerActivity">

    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_bar_gradient"
        android:elevation="4dp"
        android:foreground="@drawable/app_bar_ripple"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/custom_theme_manager_title"
            android:textColor="?colorOnPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/current_background"
            android:textSize="18sp"
            android:textStyle="bold" />


        <it.saimao.tmktaikeyboard.maokeyboard.CustomKeyboardView
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/transparent_background"
            android:keyBackground="@drawable/enhanced_custom_theme_keybackground"
            android:keyPreviewLayout="@null"
            android:keyTextColor="#ffffff"
            android:keyTextSize="14sp"
            android:popupLayout="@layout/keyboard_popup_custom"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />


        <Button
            android:id="@+id/btn_select_background"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:text="@string/select_background_image"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_clear_background"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_background_image"
            android:textAllCaps="false" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_set_keyboard_background"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:text="@string/set_keyboard_background"
        android:textAllCaps="false" />


</RelativeLayout>